<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#d7d7d7"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hot_item_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/hot_item_layout_top_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/hot_item_01"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/hot_item_image_01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_room_type_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="13dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="type"/>

                <ImageView
                    android:id="@+id/hot_item_type_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/hot_item_layout_top_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/hot_item_02"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/hot_item_image_02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_room_type_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="13dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="type"/>

                <ImageView
                    android:id="@+id/hot_item_type_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>